{
  "name": "labelcopier",
  "version": "1.2.0",
  "description": "Web app that copies the labels and milestones from one repository to another.",
  "author": "Badwater Bay",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadwaterBay/labelcopier.git"
  },
  "homepage": "https://github.com/BadwaterBay/labelcopier",
  "bugs": {
    "url": "https://github.com/BadwaterBay/labelcopier/issues"
  },
  "scripts": {
    "ci": "yarn --frozen-lockfile",
    "clean": "rm -rf build",
    "format": "prettier './**/*.{js,jsx,ts,tsx,html,md,json,css,scss}' --write",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' --fix",
    "build:dev": "webpack-dev-server --mode=development",
    "build": "yarn clean && webpack --mode=production",
    "serve-build": "serve build",
    "test": "jest",
    "start": "yarn build:dev",
    "production": "yarn build && yarn serve-build",
    "refresh": "rm -rf node_modules && yarn ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,html,md,json,css,scss}": [
      "prettier --write"
    ],
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@dongskyler/helpers.js": "^0.3.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "bootstrap-material-design": "^4.1.3",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-jest": "^26.2.2",
    "css-loader": "^4.2.2",
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jquery": "1.5.1",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "serve": "^11.3.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
